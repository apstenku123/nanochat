{
  "$schema": "https://opencode.ai/config.json",
  "model": "google-vertex-anthropic/claude-opus-4-6@default",
  "small_model": "google-vertex/gemini-3-flash-preview",
  "provider": {
    "google-vertex-anthropic": {
      "options": {
        "project": "alpine-aspect-459819-m4",
        "location": "us-east5"
      },
      "models": {
        "claude-opus-4-6@default": {
          "name": "Claude Opus 4.6 Adaptive Thinking (Vertex AI)",
          "limit": { "context": 1000000, "output": 128000 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] },
          "reasoning": true
        }
      }
    },
    "google-vertex": {
      "options": {
        "project": "alpine-aspect-459819-m4",
        "location": "global"
      },
      "models": {
        "gemini-3-pro-preview": {
          "name": "Gemini 3 Pro Preview (Vertex AI)",
          "limit": { "context": 1048576, "output": 65535 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] }
        },
        "gemini-3-flash-preview": {
          "name": "Gemini 3 Flash Preview (Vertex AI)",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] }
        },
        "zai-org/glm-5-maas": {
          "name": "GLM-5 (Vertex AI Managed)",
          "limit": { "context": 200000, "output": 128000 },
          "modalities": { "input": ["text"], "output": ["text"] }
        }
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "environment": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": true
    },
    "brave-search": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-brave-search"],
      "environment": {
        "BRAVE_API_KEY": "{env:BRAVE_API_KEY}"
      },
      "enabled": true
    },
    "exa": {
      "type": "local",
      "command": ["npx", "-y", "exa-mcp-server"],
      "environment": {
        "EXA_API_KEY": "{env:EXA_API_KEY}"
      },
      "enabled": true
    },
    "tavily": {
      "type": "local",
      "command": ["npx", "-y", "tavily-mcp@latest"],
      "environment": {
        "TAVILY_API_KEY": "{env:TAVILY_API_KEY}"
      },
      "enabled": true
    },
    "perplexity": {
      "type": "local",
      "command": ["npx", "-y", "@perplexity-ai/mcp-server"],
      "environment": {
        "PERPLEXITY_API_KEY": "{env:PERPLEXITY_API_KEY}"
      },
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest", "--headless"],
      "enabled": true
    },
    "gcloud": {
      "type": "local",
      "command": ["npx", "-y", "@google-cloud/gcloud-mcp"],
      "enabled": true
    }
  },
  "theme": "catppuccin-mocha",
  "autoupdate": "notify"
}
